
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-signin"}) do |f| %>
<h2 class="text-center">Sign up</h2>
  <%= f.error_notification %>

  <%= f.input :email, required: true, autofocus: true, placeholder: "Email", input_html: {class: "form-control"}, label: false %>
  <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), placeholder: "Password", input_html: {class: "form-control"}, label: false %>
  <%= f.input :password_confirmation, required: true, label: false, placeholder: "Password confirmation", input_html: {class: "form-contrl"} %>

    <%= f.button :submit, "Sign up", class: "btn btn-primary btn-block" %>
<% end %>

<%= render "devise/shared/links" %>
